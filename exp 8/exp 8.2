// ---------- EmployeeServlet.java ----------
import java.io.*;
import javax.servlet.*;
import javax.servlet.http.*;
import javax.servlet.annotation.WebServlet;
import java.sql.*;

@WebServlet("/EmployeeServlet")
public class EmployeeServlet extends HttpServlet {

    // Database details â€” change according to your setup
    static final String JDBC_URL = "jdbc:mysql://localhost:3306/testdb";
    static final String DB_USER = "root";
    static final String DB_PASS = "root";

    protected void doGet(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {

        response.setContentType("text/html");
        PrintWriter out = response.getWriter();

        String empId = request.getParameter("empid");

        out.println("<html><body>");
        out.println("<h2>Employee Details</h2>");

        try {
            // Load JDBC driver
            Class.forName("com.mysql.cj.jdbc.Driver");

            // Establish connection
            Connection con = DriverManager.getConnection(JDBC_URL, DB_USER, DB_PASS);

            Statement stmt;
            ResultSet rs;

            if (empId != null && !empId.trim().isEmpty()) {
                // Fetch specific employee by ID
                stmt = con.createStatement();
                rs = stmt.executeQuery("SELECT * FROM Employee WHERE EmpID=" + empId);
                if (!rs.next()) {
                    out.println("<p><b>No employee found with ID " + empId + "</b></p>");
                } else {
                    out.println("<table border='1' cellpadding='10'>");
                    out.println("<tr><th>EmpID</th><th>Name</th><th>Salary</th></tr>");
                    do {
                        out.println("<tr><td>" + rs.getInt("EmpID") + "</td><td>" 
                                + rs.getString("Name") + "</td><td>" 
                                + rs.getDouble("Salary") + "</td></tr>");
                    } while (rs.next());
                    out.println("</table>");
                }
            } else {
                // Fetch all employees
                stmt = con.createStatement();
                rs = stmt.executeQuery("SELECT * FROM Employee");
                out.println("<table border='1' cellpadding='10'>");
                out.println("<tr><th>EmpID</th><th>Name</th><th>Salary</th></tr>");
                while (rs.next()) {
                    out.println("<tr><td>" + rs.getInt("EmpID") + "</td><td>" 
                            + rs.getString("Name") + "</td><td>" 
                            + rs.getDouble("Salary") + "</td></tr>");
                }
                out.println("</table>");
            }

            // Close connections
            con.close();

        } catch (Exception e) {
            out.println("<p style='color:red;'>Error: " + e.getMessage() + "</p>");
            e.printStackTrace(out);
        }

        out.println("<br><a href='employee.html'>Go Back</a>");
        out.println("</body></html>");
        out.close();
    }
}


