// ---------- AttendanceServlet.java ----------
import java.io.*;
import javax.servlet.*;
import javax.servlet.http.*;
import javax.servlet.annotation.WebServlet;
import java.sql.*;

@WebServlet("/AttendanceServlet")
public class AttendanceServlet extends HttpServlet {

    // Database connection details (change according to your system)
    static final String JDBC_URL = "jdbc:mysql://localhost:3306/testdb";
    static final String DB_USER = "root";
    static final String DB_PASS = "root";

    protected void doPost(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {

        response.setContentType("text/html");
        PrintWriter out = response.getWriter();

        // Get form data
        String studentId = request.getParameter("studentId");
        String date = request.getParameter("date");
        String status = request.getParameter("status");

        try {
            // Load JDBC driver
            Class.forName("com.mysql.cj.jdbc.Driver");

            // Connect to DB
            Connection con = DriverManager.getConnection(JDBC_URL, DB_USER, DB_PASS);

            // Insert data
            String query = "INSERT INTO Attendance (StudentID, Date, Status) VALUES (?, ?, ?)";
            PreparedStatement ps = con.prepareStatement(query);
            ps.setString(1, studentId);
            ps.setString(2, date);
            ps.setString(3, status);

            int rows = ps.executeUpdate();

            if (rows > 0) {
                out.println("<html><body>");
                out.println("<h2>Attendance Recorded Successfully!</h2>");
                out.println("<p>Student ID: " + studentId + "</p>");
                out.println("<p>Date: " + date + "</p>");
                out.println("<p>Status: " + status + "</p>");
                out.println("<a href='attendance.jsp'>Go Back</a>");
                out.println("</body></html>");
            } else {
                out.println("<html><body>");
                out.println("<h2 style='color:red;'>Failed to record attendance.</h2>");
                out.println("<a href='attendance.jsp'>Try Again</a>");
                out.println("</body></html>");
            }

            con.close();

        } catch (Exception e) {
            out.println("<html><body>");
            out.println("<h2 style='color:red;'>Error: " + e.getMessage() + "</h2>");
            out.println("<a href='attendance.jsp'>Go Back</a>");
            out.println("</body></html>");
            e.printStackTrace(out);
        }

        out.close();
    }
}


